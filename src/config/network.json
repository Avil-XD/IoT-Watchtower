{
    "network": {
        "num_devices": 3,
        "connection_type": "WiFi",
        "devices": [
            {
                "id": "camera_01",
                "type": "SmartCamera",
                "protocols": ["MQTT", "HTTP"],
                "security_features": ["encryption", "authentication"],
                "properties": {
                    "resolution": "1080p",
                    "streaming": true,
                    "motion_detection": true
                }
            },
            {
                "id": "lock_01",
                "type": "SmartLock",
                "protocols": ["ZigBee", "HTTP"],
                "security_features": ["encryption", "access_control"],
                "properties": {
                    "auto_lock": true,
                    "remote_access": true,
                    "battery_powered": true
                }
            },
            {
                "id": "thermostat_01",
                "type": "SmartThermostat",
                "protocols": ["MQTT", "CoAP"],
                "security_features": ["encryption", "firmware_security"],
                "properties": {
                    "temperature_range": [-10, 35],
                    "humidity_sensing": true,
                    "schedule_support": true
                }
            }
        ],
        "simulation": {
            "duration": 3600,
            "time_unit": "seconds",
            "network_latency": 50,
            "packet_loss_rate": 0.01
        }
    }
}